<body>
    <div class="animation-area" id="particles"></div>
    
    <div class="header">
        <h1><i class="fas fa-gift"></i> 福利局抽卡系统</h1>
        <p class="subtitle">点击卡片翻开，10秒后自动复位并交换位置</p>
    </div>
    
    <div class="instructions">
        <p><i class="fas fa-info-circle"></i> 每次翻开卡片后，10秒会自动翻回背面并随机交换所有卡片位置。刷新页面也会随机交换卡片位置。卡片内容：加入灰道、一瓶冰红茶、三根阿尔卑斯、再来一次。</p>
    </div>
    
    <div class="timer-container">
        <i class="fas fa-clock"></i>
        <span>自动翻回倒计时：</span>
        <div class="timer" id="timer">10</div>
        <span>秒</span>
    </div>
    
    <div class="cards-container" id="cards-container">
        <!-- 卡片将通过JavaScript动态生成 -->
    </div>
    
    <div class="flip-counter">
        累计翻开次数：<span class="counter-value" id="flip-count">0</span>
    </div>
    <div class="controls">
        <button id="flip-all">
            <i class="fas fa-sync-alt"></i> 翻开所有卡片
        </button>
        <button id="reset-cards">
            <i class="fas fa-undo"></i> 立即复位并交换
        </button>
        <button id="shuffle-cards">
            <i class="fas fa-random"></i> 仅交换位置
        </button>
    </div>
    
    <div class="footer">
        <p>福利局抽卡系统 &copy; 2023 | 每次抽卡都有惊喜，祝您好运！</p>
    </div>

    <script>
        // 卡片数据
        const cardData = [
            { id: 1, backText: "福利局", frontText: "加入灰道", frontClass: "card-content-1", icon: "fas fa-user-secret" },
            { id: 2, backText: "福利局", frontText: "一瓶冰红茶", frontClass: "card-content-2", icon: "fas fa-wine-bottle" },
            { id: 3, backText: "福利局", frontText: "三根阿尔卑斯", frontClass: "card-content-3", icon: "fas fa-candy-cane" },
            { id: 4, backText: "福利局", frontText: "再来一次", frontClass: "card-content-4", icon: "fas fa-redo" }
        ];

        // 全局变量
        let cards = [];
        let flipCount = 0;
        let timer = null;
        let timeLeft = 10;
        let isTimerRunning = false;

        // 初始化页面
        document.addEventListener('DOMContentLoaded', function() {
            initCards();
            createParticles();
            updateFlipCount();
            
            // 添加按钮事件监听
            document.getElementById('flip-all').addEventListener('click', flipAllCards);
            document.getElementById('reset-cards').addEventListener('click', resetAndShuffle);
            document.getElementById('shuffle-cards').addEventListener('click', shuffleCardsOnly);
            
            // 初始随机交换卡片位置
            shuffleCards();
            
            // 每10秒自动刷新计时器显示
            setInterval(updateTimerDisplay, 1000);
        });

        // 初始化卡片
        function initCards() {
            const container = document.getElementById('cards-container');
            container.innerHTML = '';
            
            cardData.forEach((card, index) => {
                const cardElement = document.createElement('div');
                cardElement.className = 'card';
                cardElement.dataset.id = card.id;
                
                cardElement.innerHTML = `
                    <div class="card-face card-back">
                        <i class="fas fa-gift"></i>
                        <div class="card-title">${card.backText}</div>
                    </div>
                    <div class="card-face card-front">
                        <i class="${card.icon}"></i>
                        <div class="card-content ${card.frontClass}">${card.frontText}</div>
                    </div>
                `;
                
                // 添加点击事件
                cardElement.addEventListener('click', () => flipCard(cardElement));
                
                container.appendChild(cardElement);
                cards.push(cardElement);
            });
        }
        // 翻转卡片
        function flipCard(cardElement) {
            if (cardElement.classList.contains('flipped')) return;
            
            cardElement.classList.add('flipped');
            flipCount++;
            updateFlipCount();
            
            // 如果计时器没有运行，则启动计时器
            if (!isTimerRunning) {
                startTimer();
            }
        }

        // 翻转所有卡片
        function flipAllCards() {
            cards.forEach(card => {
                if (!card.classList.contains('flipped')) {
                    card.classList.add('flipped');
                }
            });
            
            flipCount += cards.filter(card => !card.classList.contains('flipped')).length;
            updateFlipCount();
            
            if (!isTimerRunning) {
                startTimer();
            }
        }

        // 启动计时器
        function startTimer() {
            isTimerRunning = true;
            timeLeft = 10;
            updateTimerDisplay();
            
            if (timer) {
                clearTimeout(timer);
            }
            
            timer = setTimeout(() => {
                resetAndShuffle();
                isTimerRunning = false;
            }, 10000);
        }

        // 更新计时器显示
        function updateTimerDisplay() {
            const timerElement = document.getElementById('timer');
            
            if (isTimerRunning && timeLeft > 0) {
                timeLeft--;
                timerElement.textContent = timeLeft;
                
                // 最后3秒闪烁效果
                if (timeLeft <= 3) {
                    timerElement.style.color = '#ff5555';
                    timerElement.style.animation = 'none';
                    setTimeout(() => {
                        timerElement.style.animation = 'blink 1s infinite';
                    }, 10);
                } else {
                    timerElement.style.color = '#FFD700';
                    timerElement.style.animation = 'none';
                }
            }
        }

        // 重置并洗牌
        function resetAndShuffle() {
            // 翻回所有卡片
            cards.forEach(card => {
                card.classList.remove('flipped');
            });
            
            // 交换卡片位置
            shuffleCards();
            
            // 重置计时器状态
            isTimerRunning = false;
            timeLeft = 10;
            document.getElementById('timer').textContent = timeLeft;
            document.getElementById('timer').style.color = '#FFD700';
            document.getElementById('timer').style.animation = 'none';
        }

        // 仅交换卡片位置
        function shuffleCardsOnly() {
            shuffleCards();
        }
        // 随机交换卡片位置
        function shuffleCards() {
            const container = document.getElementById('cards-container');
            const cardElements = Array.from(container.children);
            
            // Fisher-Yates 洗牌算法
            for (let i = cardElements.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                container.appendChild(cardElements[j]);
                // 更新数组引用
                const temp = cardElements[i];
                cardElements[i] = cardElements[j];
                cardElements[j] = temp;
            }
            
            // 更新cards数组
            cards = Array.from(container.querySelectorAll('.card'));
        }

        // 更新翻牌次数显示
        function updateFlipCount() {
            document.getElementById('flip-count').textContent = flipCount;
        }

        // 创建背景粒子效果
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // 随机位置
                particle.style.left = Math.random() * 100 + 'vw';
                particle.style.top = Math.random() * 100 + 'vh';
                
                // 随机大小
                const size = Math.random() * 5 + 2;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                
                // 随机动画延迟和持续时间
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                
                particlesContainer.appendChild(particle);
            }
        }

        // 页面刷新时随机交换卡片位置
        window.addEventListener('beforeunload', function() {
            // 我们使用sessionStorage来记录页面刷新，以便在页面加载时洗牌
            sessionStorage.setItem('pageRefreshed', 'true');
        });

        // 页面加载时检查是否需要洗牌
        if (sessionStorage.getItem('pageRefreshed') === 'true') {
            sessionStorage.removeItem('pageRefreshed');
            // 页面加载后洗牌已经在初始化时执行
        }
    </script>
</body>
</html>
